    for (i=0; i < n; i++){
        if (max < sembako[i].jml_terjual){
            max = sembako[i].jml_terjual;
            bestseller = sembako[i].nama;
        }
    }
    // total penjualan suatu hari
    for (i=0; i < n; i++){
        topen = topen + sembako[i].total;
    }

    cout << endl;
    
    cout << "Nama item barang | Harga per item | Jumlah terjual | Total per item" << endl;
    for (i=0; i < 4; i++) {
        cout << sembako[i].nama << "                "<<sembako[i].harga << "                 "<<sembako[i].jml_terjual << "                 " <<sembako[i].total << endl;
    }
    
    cout << endl;
    cout << "Total penjualan : " << topen << endl;
    cout << "Item terlaku adalah " << bestseller << endl;
    
    return 0;
}
